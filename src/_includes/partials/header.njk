<header id="header" class="bg-white w-screen dark:bg-neutral-800 px-6 md:px-20 md:py-5 z-50 fixed top-0 shadow-md transition-all transform ease-in-out duration-500">
    <div class="mx-auto flex items-center flex-wrap justify-between">
        <div class="sm:mr-8">
            <a class="flex items-center" href="{{ '/' | url }}">
                <span class="text-xl text-dark dark:text-white font-semibold self-center">{{ site.title }}</span>
            </a>
        </div>
        <nav id="menu" class="order-last md:order-none items-center flex-grow w-full md:w-auto md:flex hidden md:mt-0">
            {% for item in menu %}
                <a href="{{ item.url | url }}" {% if item.newTab %}target="_blank" rel="noopener" {% endif %}class="block mt-4 md:inline-block md:mt-0 font-medium text-dark dark:text-white hover:text-stone-900 text-base mr-4">{{ item.label }}</a>
            {% endfor %}
            <div class="mt-8 md:hidden items-center w-full flex justify-between px-20 mb-5">
                {% include "partials/socials.njk" %}
            </div>
        </nav>

        <div class="flex items-center space-x-4">
            <!-- Dark/Light Mode Toggle -->
            <button 
                id="theme-toggle" 
                type="button" 
                class="text-white hover:text-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-300 rounded-lg text-sm p-2.5 transition-colors duration-200"
                aria-label="Toggle dark mode"
            >
                <!-- Sun icon (visible in dark mode) -->
                <svg id="theme-toggle-light-icon" class="w-5 h-5 hidden text-dark dark:text-white" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
                </svg>
                <!-- Moon icon (visible in light mode) -->
                <svg id="theme-toggle-dark-icon" class="w-5 h-5 text-dark dark:text-white" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
                </svg>
            </button>

            <div class="invisible md:visible md:flex md:space-x-8">
                {% include "partials/socials.njk" %}
            </div>
        </div>

        {# <form id="search" action="{{ '/search' | url }}" class="order-last sm:order-none flex-grow items-center justify-end hidden sm:block mt-6 sm:mt-0">
            <label class="visually-hidden" for="header-searchbox">Search....</label>
            <input type="text" id="header-searchbox" name="q" placeholder="Search...." class="w-full sm:max-w-xs bg-neutral-800 border border-transparent float-right focus:bg-neutral-800 focus:border-slate-300 focus:outline-none h-8 p-4 placeholder-white rounded text-white text-sm">
        </form> #}
        <div id="menu-toggle" class="flex items-center md:hidden text-dark dark:text-white hover:text-white cursor-pointer sm:ml-6">
            {% include "icons/menu.svg" %}
        </div>
    </div>
</header>